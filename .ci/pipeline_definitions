potter-hub:
  template: 'default'
  base_definition:
    traits:
      version: ~
      notifications:
        default:
          on_error:
            triggering_policy: 'always'
            recipients:
            - email_addresses: ~
  jobs:
    minor-release:
      repo:
        trigger: false
      traits:
        version:
          preprocess: 'finalize'
          inject_effective_version: true
        release:
          nextversion: 'bump_minor'
          commit_message_prefix: '[skip ci]'
        component_descriptor: ~
        publish:
          dockerimages:
            buildgohello:
              registry: 'hub_dev_read_write'
              image: 'eu.gcr.io/sap-gcp-k8s-wm-dev/examples/potter'
              tag_as_latest: true
      steps:
        run_script:
          execute:
          - minor_release.py
